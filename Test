    <script>
        // Preguntas y respuestas actualizadas según tu solicitud
        const questions = [
            {
                text: "Cuando tenés que estudiar para un examen, ¿cómo organizás tu tiempo?",
                options: [
                    { type: "Metódico", text: "Hago un plan de estudio con horarios definidos y sigo una rutina." },
                    { type: "Reflexivo", text: "Primero analizo qué temas son más importantes y después decido cuánto tiempo dedicarles." },
                    { type: "Práctico", text: "Repaso lo que creo más útil y voy resolviendo ejercicios directamente." }
                ]
            },
            {
                text: "¿Cómo preferís aprender un nuevo concepto difícil?",
                options: [
                    { type: "Metódico", text: "Lo estudio paso a paso, siguiendo el material y tomando apuntes." },
                    { type: "Reflexivo", text: "Pienso en ejemplos o comparaciones que me ayuden a comprenderlo." },
                    { type: "Práctico", text: "Prefiero aplicarlo en un ejercicio o situación concreta." }
                ]
            },
            {
                text: "Cuando te enfrentás a un trabajo práctico, ¿cuál es tu primer paso?",
                options: [
                    { type: "Metódico", text: "Organizo las tareas y hago un esquema de cómo avanzar." },
                    { type: "Reflexivo", text: "Me detengo a pensar cuál es la mejor forma de encarar el trabajo." },
                    { type: "Práctico", text: "Comienzo a hacerlo directamente y voy corrigiendo sobre la marcha." }
                ]
            },
            {
                text: "¿Cómo manejás los plazos de entrega de trabajos?",
                options: [
                    { type: "Metódico", text: "Empiezo con anticipación para terminar antes de la fecha límite." },
                    { type: "Reflexivo", text: "Analizo cuánto tiempo me llevará y lo distribuyo según mi ritmo." },
                    { type: "Práctico", text: "Trabajo más cerca de la fecha de entrega y me concentro en cumplir." }
                ]
            },
            {
                text: "Cuando no entendés algo en clase, ¿qué hacés?",
                options: [
                    { type: "Metódico", text: "Vuelvo a leer el material y lo estudio con más detalle." },
                    { type: "Reflexivo", text: "Pienso en diferentes formas de entenderlo o lo relaciono con lo que ya sé." },
                    { type: "Práctico", text: "Pregunto al profesor o a un compañero en el momento." }
                ]
            },
            {
                text: "¿Cómo te preparás para una presentación oral?",
                options: [
                    { type: "Metódico", text: "Escribo un guion y lo practico varias veces." },
                    { type: "Reflexivo", text: "Pienso en las ideas principales y cómo transmitirlas de forma clara." },
                    { type: "Práctico", text: "Hago una práctica rápida y confío en explicarlo con naturalidad." }
                ]
            },
            {
                text: "¿Qué tipo de actividades te resultan más efectivas para aprender?",
                options: [
                    { type: "Metódico", text: "Leer, resumir y hacer esquemas." },
                    { type: "Reflexivo", text: "Debates, análisis de casos y reflexionar sobre ejemplos." },
                    { type: "Práctico", text: "Ejercicios, experimentos y actividades aplicadas." }
                ]
            },
            {
                text: "Cuando tenés que resolver un problema complejo, ¿cuál es tu enfoque?",
                options: [
                    { type: "Metódico", text: "Lo divido en partes y avanzo paso a paso." },
                    { type: "Reflexivo", text: "Analizo todas las posibles soluciones antes de decidir." },
                    { type: "Práctico", text: "Pruebo diferentes opciones hasta encontrar la que funciona." }
                ]
            },
            {
                text: "¿Cómo organizás tu espacio de estudio?",
                options: [
                    { type: "Metódico", text: "Ordenado, con todo el material preparado y a mano." },
                    { type: "Reflexivo", text: "Prefiero un lugar tranquilo donde pueda concentrarme y pensar." },
                    { type: "Práctico", text: "Cualquier lugar sirve mientras pueda empezar a trabajar." }
                ]
            },
            {
                text: "Cuando aprendés algo nuevo, ¿qué te motiva más?",
                options: [
                    { type: "Metódico", text: "Ver mi progreso y sentir que sigo un plan claro." },
                    { type: "Reflexivo", text: "Entender el porqué de las cosas y relacionarlas con otros temas." },
                    { type: "Práctico", text: "Poder aplicarlo de inmediato en la práctica o en la vida real." }
                ]
            }
        ];

        const studentTypes = {
            "Metódico": "organizado, sigue rutinas y planifica su aprendizaje.",
            "Reflexivo": "estudia a su ritmo, analiza y profundiza los conceptos.",
            "Práctico": "aprende haciendo, experimentando y colaborando con otros."
        };

        let scores = {
            "Metódico": 0,
            "Reflexivo": 0,
            "Práctico": 0
        };

        let answeredCount = 0;

        function generateQuestions() {
            const container = document.getElementById('questionsContainer');
            
            questions.forEach((q, index) => {
                const questionDiv = document.createElement('div');
                questionDiv.className = 'question';
                let optionsHtml = '';
                
                q.options.forEach(opt => {
                    optionsHtml += `
                        <div class="option" data-type="${opt.type}" data-question="${index}">
                            <strong>${opt.type}:</strong> ${opt.text}
                        </div>
                    `;
                });
                
                questionDiv.innerHTML = `
                    <div class="question-title">Pregunta ${index + 1}: ${q.text}</div>
                    <div class="options">
                        ${optionsHtml}
                    </div>
                `;
                container.appendChild(questionDiv);
            });

            document.querySelectorAll('.option').forEach(option => {
                option.addEventListener('click', function() {
                    const questionIndex = this.getAttribute('data-question');
                    document.querySelectorAll(`.option[data-question="${questionIndex}"]`).forEach(opt => {
                        opt.classList.remove('selected');
                    });
                    
                    this.classList.add('selected');
                    
                    const type = this.getAttribute('data-type');
                    scores[type]++;
                    
                    if (!this.hasAttribute('data-answered')) {
                        this.setAttribute('data-answered', 'true');
                        answeredCount++;
                        document.getElementById('progressText').textContent = `Preguntas respondidas: ${answeredCount} de 10`;
                    }
                    
                    if (answeredCount === 10) {
                        document.getElementById('resultButton').disabled = false;
                    }
                });
            });
        }

        function showResult() {
            // Calcular porcentajes
            const total = 10;
            const metodicoPct = Math.round((scores["Metódico"] / total) * 100);
            const reflexivoPct = Math.round((scores["Reflexivo"] / total) * 100);
            const practicoPct = Math.round((scores["Práctico"] / total) * 100);
            
            // Encontrar el tipo predominante
            let maxType = "Metódico";
            let maxScore = scores["Metódico"];
            
            for (const type in scores) {
                if (scores[type] > maxScore) {
                    maxScore = scores[type];
                    maxType = type;
                }
            }
            
            // En caso de empate, prioridad: Metódico > Reflexivo > Práctico
            for (const type of ["Metódico", "Reflexivo", "Práctico"]) {
                if (scores[type] === maxScore) {
                    maxType = type;
                    break;
                }
            }
            
            // Mostrar porcentajes
            document.getElementById('metodicoPct').textContent = `${metodicoPct}%`;
            document.getElementById('reflexivoPct').textContent = `${reflexivoPct}%`;
            document.getElementById('practicoPct').textContent = `${practicoPct}%`;
            
            // Mostrar título y descripción
            document.getElementById('resultTitle').textContent = `¡Tu perfil de estudiante predominante es: ${maxType}!`;
            document.getElementById('resultDescription').textContent = `Características: ${studentTypes[maxType]}\n\nEste resultado se basa en tus respuestas. ¡Recordá que todos usamos un poco de cada estilo en diferentes situaciones!`;
            
            // Mostrar resultado con animación
            document.getElementById('result').style.display = 'block';
            document.getElementById('result').scrollIntoView({ behavior: 'smooth' });
        }

        document.addEventListener('DOMContentLoaded', function() {
            generateQuestions();
            document.getElementById('resultButton').addEventListener('click', showResult);
        });
    </script>
</body>
